---
import { Image } from 'astro:assets';
import type { Image as ImageType } from '../data/galleryData';

interface Props {
  images: ImageType[];
}

const { images } = Astro.props;
---

<section id="photo-grid" class="w-full mx-auto">
  <div class="px-4">
    <!-- Grid container -->
    <div id="photo-grid-columns" class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-4">
      {images.map((image) => (
        <a
          href={image.src.src}
          class="photo-item glightbox inline-block mb-4 w-full transition-transform hover:scale-[1.02] hover:z-10 break-inside-avoid"
          data-gallery="gallery1"
          data-type="image"
          data-glightbox={image.description ? `title: ${image.description}` : undefined}
        >
          <Image
            src={image.src}
            quality={90}
            format="webp"
            width={image.src.width}
            height={image.src.height}
            class="w-full h-auto object-cover rounded-sm shadow-sm hover:shadow-lg transition-shadow"
            alt={image.title}
          />
        </a>
      ))}
    </div>
  </div>
</section>

<!-- GLightbox CSS and JS from CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = GLightbox({
      selector: '.glightbox',
      loop: true,
      closeButton: true,
      touchNavigation: true,
      slideEffect: 'fade',

      // Custom SVG icons
      svgClose: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>`,
      svgNext: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 6 15 12 9 18"/>
      </svg>`,
      svgPrev: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15 6 9 12 15 18"/>
      </svg>`
    });
  });
</script>

<style>
  /* Ensure icons are always visible */
  .gclose, .gnext, .gprev {
    display: block !important;
    opacity: 1 !important;
    z-index: 9999;
    color: #fff;
  }

  /* Optional: hover effect for arrows */
  .gnext:hover, .gprev:hover, .gclose:hover {
    color: #ffd700;
  }
</style>
